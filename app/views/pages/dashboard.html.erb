<div>
  <h2>Your cart<h2>
  <% @my_bookings.each do |booking| %>
  <% if !booking.confirmed %>
    <ul>
      <li><%= booking.pokemon.name %> (Level <%= booking.pokemon.level %>)</li>
    </ul>
    <% end %>
  <% end %>
    <div class="total">
      <h4>Total</h4>
      <p><%= @bookings_sum %> P </p>
      <h5>Your balance</h5>
      <p><%= @my_balance %> P</p>
      <h5>Your balance after purchase</h5>
      <p><%= @my_balance - @bookings_sum %> P</p>
    </div>

    <%= link_to 'checkout', confirm_path, data: {turbo_method: :post} %>

  <br>
  <br>
  <h2>Your previous orders</h2>
  <% @my_bookings.each do |booking| %>
  <% if booking.confirmed == true %>
    <ul>
      <li>
      <%= booking.pokemon.name %> (Level <%= booking.pokemon.level %>)
      <br>
      <p><%= booking.pokemon.price %> P</p>
      </li>
    </ul>
    <% end %>
   <% end %>
</div>
