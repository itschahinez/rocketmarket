
<div class="container-new">
  <header>
    <h2 class="h2-center py-2 text-center">Log in</h2>
  </header>

  <div class="form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  class: 'input' %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  class: 'input' %>
      <%= f.input :remember_me, class: 'input', as: :boolean if devise_mapping.rememberable? %>
  </div>
  <%= f.button :submit, "Log in", class: 'card-button' %>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
